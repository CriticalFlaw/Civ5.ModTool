<Window x:Class="CivModTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Civilization V - Mod Tool"
        Height="500" Width="900"
        FontFamily="CenturyGophic"
        SizeToContent="Manual"
        ResizeMode="CanMinimize">

    <Grid Background="DarkSlateBlue">
        <TabControl x:Name="tabControls" Margin="10,10,10,10">
            <TabItem Header="Civilization">
                <Grid Background="DarkSlateBlue">
                    <Button x:Name="btnGenerateXML" Content="Generate XML" HorizontalAlignment="Left"
                            Margin="10,10,0,0" VerticalAlignment="Top" Height="25" Width="85"
                            Click="btnGenerateXML_Click" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>